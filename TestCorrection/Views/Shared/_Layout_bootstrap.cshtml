@using System
@using System.Web
@using System.Web.Optimization

<html lang="@(System.Globalization.CultureInfo.CurrentUICulture.Name)">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TestCorrection - @(ViewBag.Title)</title>
    @Styles.Render("~/Styles")

    @Scripts.Render("~/scripts/jquery")
    @Scripts.Render("~/scripts/globalize")
    @Scripts.Render("~/scripts")
    @Scripts.Render("~/scripts/jqueryval")

    @Scripts.Render("~/scripts/modernizr")
    @Scripts.Render("~/scripts/bootstrap")
</head>
<body>
    <div class="container" style="margin-top: 20px">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: #428bca; background-image: none;"></div>
            <div class="panel-heading" style="background-color: #ffffff; background-image: none;">
                @Html.Partial("_Top")
            </div>
            <div class="panel-body" style="min-height: 80%">
                @RenderBody()
            </div>
            <div class="panel-footer" style="background-color: #428bca; background-image: none;">
            </div>
        </div>
        <div class="footer">
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
